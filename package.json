{
  "name": "m3u8-downloader",
  "version": "0.0.1",
  "description": "Fetch m3u8 and convert it to mp4 file",
  "main": "main.js",
  "scripts": {
    "precommit": "lint-staged",
    "dev": "NODE_ENV=development electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "author": "zhongchiyu@gmail.com",
  "license": "MIT",
  "dependencies": {
    "m3u8": "0.0.7",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.3",
    "shelljs": "^0.7.7"
  },
  "devDependencies": {
    "electron": "^1.6.5",
    "electron-builder": "^17.0.1",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "standard": "^10.0.2"
  },
  "build": {
    "appId": "me.cattail.m3u8-downloader",
    "extraResources": "bin/*"
  }
